{
    "clearMocks": true,

    "coverageDirectory": "dist/coverage",

    "transform": {
        "^.+\\.(ts|tsx)?$": "ts-jest"
    },
    "globals":{
        "ts-jest": {
            "skipBabel": true,
            "enableTsDiagnostics": false
        }
    },
    "moduleFileExtensions": [
        "js",
        "ts",
        "json",
        "jsx",
        "node"
    ],


    "testMatch": [
        "**/__tests__/**/?(*.)+(spec|test).(j|t)s?(x)",
        "**/__tests__/?(*.)+(spec|test).(j|t)s?(x)",
        "**/?(*.)+(spec|test).(j|t)s?(x)"
    ],

    "testPathIgnorePatterns": [
        "/node_modules/",
        "/dist/"
    ]
}
